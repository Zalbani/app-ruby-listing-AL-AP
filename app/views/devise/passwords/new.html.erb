<section class="container form_page forgot_pass">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= t('general_log.forgot_password') %></h1>
      <div class="grey_bg">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field large">
            <%= f.label t('general_log.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit t('reset_pass.send_pass_instruct'), class: 'btn btn-primary search_submit orange_button' %>
          </div>
        <% end %>
        <div class="other_links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>