<section class="container log_page">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= t('general_log.log_in') %></h1>
      <div class="grey_bg">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field large">
            <%= f.label t('general_log.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field large">
            <%= f.label t('general_log.password') %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label t('session_new.remember_me') %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit t('general_log.login'), class: 'btn btn-primary search_submit orange_button' %>
          </div>
        <% end %>
        <div class="other_links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>