<section class="home">


<h1><%= t('homepage.you_re_going_to_find') %></h1>

<div>
  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag 'query', nil, placeholder: t('homepage.what_searching_for'), class: 'form-control search' %>
    <%= submit_tag t('homepage.search'), class: 'btn btn-primary search_submit green_button' %>
  <% end %>
</div>
  <div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= t('homepage.created_listing') %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
  </div>

<% @announces.each do |post| %>
    <section class="vanish">
      <a href="<%= listing_path(post.id) %>">
        <h2><%= post.title %></h2>
        <% if post.picture.attached? %>
          <%= image_tag post.picture, width: '100px' %>
        <% end %>
      </a>
    </section>
<% end %>
</section>

<script>
    function $_GET() {
        var vars = {};
        window.location.href.replace( location.hash, '' ).replace(
            /[?&]+([^=&]+)=?([^&]*)?/gi, // regexp
            function( m, key, value ) { // callback
                vars[key] = value !== undefined ? value : '';
            }
        );
        return vars;
    }
    var params = $_GET();
    if(params.created_annonce === 'true'){
        console.log("GG WP");
        $( ".modal" ).addClass('d_block');
    }

    $( ".close" ).click(function() {
        $( ".modal.d_block" ).removeClass("d_block");
    });
</script>
